@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="row my-5">
    <div class="col-md-4 offset-md-4">
        <h1  class="d-flex justify-content-md-center font-weight-bolder">@ViewData["Title"]</h1>
        <h4 class="d-flex justify-content-md-center font-weight-bolder">Create a new account.</h4>
        <hr />
        <section>
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" >
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" autofocus />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Name"></label>
                    <input asp-for="Input.Name" class="form-control" />
                    <span asp-validation-for="Input.Name" class="text-danger "></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.PhoneNumber"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>

                @if (User.IsInRole(SD.Admin))
                {
                    <div class="form-group row font-weight-bold font-italic">
                        <div class="col-2">
                        </div>
                        <div class="col-5">
                            <div class="form-check-inline">
                                <input type="radio" name="rdUserRole" value="@SD.Admin" class="form-check-input" />
                                <label class="form-check-label">
                                    @SD.Admin
                                </label>
                            </div>
                            <div class="form-check-inline">
                                <input type="radio" name="rdUserRole" value="@SD.SupAdmin" class="form-check-input" />
                                <label class="form-check-label">
                                    @SD.SupAdmin
                                </label>
                            </div>
                            <div class="form-check-inline">
                                <input type="radio" name="rdUserRole" value="@SD.Receptionist" class="form-check-input" />
                                <label class="form-check-label">
                                    @SD.Receptionist
                                </label>
                            </div>
                        </div>
                    </div>
                }
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </section>    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
