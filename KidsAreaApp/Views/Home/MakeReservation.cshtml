@model Reservation

@{
    ViewData["Title"] = "MakeReservation";
}

<h1>MakeReservation</h1>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="MakeReservation">
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


@if (Model != null)
{
    <div class="row mt-3">
        <div class="col-md-12">
            <div class="col-md-3"></div>
            <div class="col-md-9">
                <img src="@String.Format("data:image/png;base64,{0}",
                                Convert.ToBase64String(Model.Receipt.BarCode))" height="300" width="300" />
            </div>
        </div>
    </div>
}

<form asp-action="QrCodeReader" method="post" enctype="multipart/form-data">
    <input type="file" name="qrcodeUploaded" class="form-control-file" />
    <button type="submit" class="btn btn-outline-success">Reader</button>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
