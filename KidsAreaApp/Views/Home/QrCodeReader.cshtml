@model KidsAreaApp.Models.Reservation

@{
    ViewData["Title"] = "QrCodeReader";
}

<h1>QrCodeReader</h1>

<div>
    <h4>Reservation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartReservationTme)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartReservationTme)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndReservationTme)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndReservationTme)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cost)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cost)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.CustomerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.CustomerName)
        </dd>
        <div class="row mt-3">
            <div class="col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-9">
                    <img src="@String.Format("data:image/png;base64,{0}",
                                Convert.ToBase64String(Model.Receipt.BarCode))" height="300" width="300" />
                </div>
            </div>
        </div>
        @Model.Receipt.SerialKey

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ReservationId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
