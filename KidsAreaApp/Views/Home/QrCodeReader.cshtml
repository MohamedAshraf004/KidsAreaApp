@model Reservation
@{
    ViewData["Title"] = "Check Out";
}

<form asp-action="PrintReceipt" method="post">
    <div class="container row border ml-1 backgroundWhiteBorder10Padding" style="width:100%">
        <div class="col-md-8 offset-md-2 col-12" style="border-right:1px solid #bbb9b9">
            <br />
            <input type="hidden" asp-for="@Model.ReservationId" />
            <input type="hidden" asp-for="@Model.Receipt.SerialKey" />
            <input type="hidden" asp-for="@Model.TotatCost" />
            <input type="hidden" asp-for="@Model.StartReservationTme" />
            <input type="hidden" asp-for="@Model.EndReservationTme" />


            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="@Model.StartReservationTme"></label>
                </div>
                <div class="col-9">
                    <input asp-for="@Model.StartReservationTme" disabled class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="@Model.EndReservationTme"></label>
                </div>
                <div class="col-9">
                    <input asp-for="@Model.EndReservationTme" disabled class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label>Cost</label>
                </div>
                <div class="col-9">
                    <input asp-for="@Model.TotatCost" disabled class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="@Model.Discount"></label>
                </div>
                <div class="col-9">
                    <input asp-for="@Model.Discount" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="@Model.Receipt.SerialKey"></label>
                </div>
                <div class="col-9">
                    <input asp-for="@Model.Receipt.SerialKey" disabled class="form-control" />
                </div>
            </div>

            <div class="form-group row">
               
                <div class="offset-6">
                    <button value="Submit" type="submit" class="btn btn-primary text-white ">Check Out</button>
                </div>
            </div>
        </div>
    </div>
</form>