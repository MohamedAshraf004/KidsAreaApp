@model Reservation

@{
    ViewData["Title"] = "Make Reservation";
}

<h1>Make a New Reservation</h1>

<hr />
<div>
    <div class="row">
        <div class="offset-2 col-md-8">
            <form asp-action="MakeReservation">
                <div class="form-group my-5">
                    <input type="submit" value="Add New Reservation" class="btn btn-primary btn-lg btn-block text-white-50" />
                </div>
            </form>
        </div>
    </div>
    <div class="row my-5">
        <div class="offset-2 col-md-8">
            <form asp-action="QrCodeReader" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <input type="file" name="qrcodeUploaded" class="form-control-file text-white-50" required />
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-success">SCan QrCode</button>
                </div>
            </form>
        </div>
    </div>
</div>