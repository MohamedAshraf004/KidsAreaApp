@model IEnumerable<KidsAreaApp.Models.Hour>

@{
    ViewData["Title"] = "Index";
}

<h1>Hours</h1>
@if (Model.Count() == 0)
{
    <p>
        <a class="btn btn-primary btn-lg" asp-action="Create">Add Hour Price</a>
    </p>
}
else
{
    <div class="card" style="max-width: 100%;">
        @*<h3 class="card-header">
                Cold Feet?
            </h3>*@
        <div class="card-body">
            <h4 class="card-title">Hour Price</h4>
            <p class="card-text"> @Model.LastOrDefault().HourPrice </p>
        </div>
        <div class="card-footer">
            <div class="btn-group">
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.LastOrDefault().HourId">Change Price</a>
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@Model.LastOrDefault().HourId">Delete Hour</a>
            </div>
        </div>
    </div>
}

